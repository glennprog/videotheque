{% trans_default_domain 'FOSUserBundle' %}

<h1 class="h1-app">{{'Modification profile utilisateur'|trans}}</h1>

<div class="full-margin-m">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_profile_edit')}) }}
    <div class="row full-margin-m">
      <div class="col">
         {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'sub-label-app-sm'}}) }}
         {{ form_errors(form.lastname)}}
         {{ form_widget(form.lastname, {'attr': {'class': 'input-app input-app-border', 'required':'true', 'autocomplete':'off'} }) }}
      </div>
   </div>
   <div class="row full-margin-m">
      <div class="col">
         {{ form_label(form.firstname, 'Pr√©nom', {'label_attr': {'class': 'sub-label-app-sm'}}) }}
         {{ form_errors(form.firstname)}}
         {{ form_widget(form.firstname, {'attr': {'class': 'input-app input-app-border', 'required':'true', 'autocomplete':'off'} }) }}
      </div>
   </div>
    <div class="row full-margin-m">
      <div class="col">
         {{ form_label(form.email, 'Email', {'label_attr': {'class': 'sub-label-app-sm'}}) }}
         {{ form_errors(form.email)}}
         {{ form_widget(form.email, {'attr': {'class': 'input-app input-app-border', 'required':'true', 'autocomplete':'off'} }) }}
      </div>
    </div>
    <div class="row full-margin-m">
      <div class="col">
         {{ form_label(form.username, 'Identifiant : ', {'label_attr': {'class': 'sub-label-app-sm'}}) }}
         {{ form_errors(form.username) }}
         {{ form_widget(form.username, {'attr': {'class': 'input-app input-app-border', 'required':'true', 'autocomplete':'off'} }) }}
      </div>
    </div>
    <div class="row full-margin-m">
      <div class="col">
         {{ form_label(form.current_password, 'Mot de passe actuel : ', {'label_attr': {'class': 'sub-label-app-sm'}}) }}
         <div class="error-output-app">
         {{ form_errors(form.current_password) }}
         </div>
         {{ form_widget(form.current_password, {'attr': {'class': 'input-app input-app-border', 'required':'true', 'autocomplete':'off'} }) }}
        </div>
    </div>
    <div class="row margin-top-m">
        <div class="col">
         <input class="btn btn-outline-info main-default-btn" type="submit" value="{{ 'Enregistrer'|trans }}" />
        </div>
        <div class="col">
          <a class="float-right text-dark link-no-decoration" href="{{ path('fos_user_profile_show') }}"><i class="fas fa-arrow-left"></i> Retour</a>
        </div>
    </div>
    {{ form_end(form) }}
</div>