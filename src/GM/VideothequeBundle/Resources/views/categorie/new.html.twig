{% extends 'GMVideothequeBundle::layout.html.twig' %}

{% block app_main_content %}
    <div class="container">
        <h1 class="h1-app">{{'Créer une catégorie'|trans}}</h1>
        <div class="safe-margin-action">
            {{ form_start(form) }}
            <div class="row full-margin-m">
                <div class="col">
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'sub-label-app-sm'}}) }}
                    <div class="error-output-app">
                    {{ form_errors(form.nom)}}
                    </div>
                    {{ form_widget(form.nom, {'attr': {'class': 'input-app input-app-border', 'autocomplete':'off', 'required':'true'} }) }}
                </div>
            </div>
            <div class="row full-margin-m">
                <div class="col">
                    <input class="btn btn-outline-info main-default-btn" type="submit" value="Save" />
                </div>
                <div class="col">
                    <a class="float-right text-dark back-list-xl" href="{{ path('categorie_index') }}">Go to the list
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
